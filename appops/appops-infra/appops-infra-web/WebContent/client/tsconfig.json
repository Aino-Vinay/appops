{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution" : "node",  
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": ["es2016", "dom"],
        "typeRoots": [
            "./typings"
        ],
        "types" : [ "node" ],
        "outDir" : "./js"
    },
    "include": [
        "./ts/**/*.ts"
    ],

    "exclude": [
    "node_modules"
  ]
}